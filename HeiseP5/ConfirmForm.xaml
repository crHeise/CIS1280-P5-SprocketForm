<Window x:Class="HeiseP5.ConfirmForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeiseP5"
        mc:Ignorable="d"
        Title="ConfirmForm" Height="200" Width="300">
    <Grid>
        <Label Content="Are you sure?" Margin="91,29,0,0" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Margin="47,101,0,0" VerticalAlignment="Top" Width="75" FontSize="14" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="177,101,0,0" VerticalAlignment="Top" Width="75" FontSize="14" Click="btnNo_Click"/>
    </Grid>
</Window>
